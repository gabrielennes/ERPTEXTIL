// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Produto {
  id           String      @id @default(cuid())
  nome         String
  marca        String?
  peso         Float?
  precoCusto   Float?
  descricao    String?
  categoria    String?
  ncm          String?
  dimensoes    String? 
  precoVenda   Float
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  variacoes    Variacao[]
  itensVenda   ItensVenda[]

  @@map("produtos")
}

model Variacao {
  id            String   @id @default(cuid())
  sku           String
  codigoBarras  String?
  rfid          String?
  tamanho       String?
  cor           String?
  estoque       Int      @default(0)
  preco         Float?
  produtoId     String
  produto       Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  itensVenda    ItensVenda[]

  @@unique([produtoId, sku])
  @@map("variacoes")
}

model Venda {
  id            String      @id @default(cuid())
  numero        String?
  total         Float
  subtotal      Float
  desconto      Float       @default(0)
  taxa          Float       @default(0)
  metodoPagamento String
  parcelas      Int         @default(1)
  statusPagamento String?   // pending, approved, rejected, cancelled
  paymentId     String?     // ID do pagamento no Mercado Pago
  preferenceId  String?     // ID da preferência no Mercado Pago (para buscar pagamentos relacionados)
  userId        String?
  dataVenda     DateTime    @default(now())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  itens         ItensVenda[]

  @@map("vendas")
}

model ItensVenda {
  id            String   @id @default(cuid())
  vendaId       String
  produtoId     String
  variacaoId    String?
  quantidade    Int
  precoUnitario Float
  subtotal      Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  venda         Venda    @relation(fields: [vendaId], references: [id], onDelete: Cascade)
  produto       Produto  @relation(fields: [produtoId], references: [id], onDelete: Restrict)
  variacao      Variacao? @relation(fields: [variacaoId], references: [id], onDelete: SetNull)

  @@map("itens_venda")
}

model Cliente {
  id          String   @id @default(cuid())
  nome        String
  cnpjCpf     String?
  cep         String?
  dataCadastro DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  contasAReceber ContasAReceber[]

  @@map("clientes")
}

model Fornecedor {
  id          String   @id @default(cuid())
  nome        String
  cnpj        String?
  cep         String?
  dataCadastro DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  contasAPagar ContasAPagar[]

  @@map("fornecedores")
}

model ContasAPagar {
  id              String      @id @default(cuid())
  fornecedorId    String
  fornecedor      Fornecedor  @relation(fields: [fornecedorId], references: [id], onDelete: Restrict)
  cnpj            String?
  valor           Float
  parcelas        Int         @default(1)
  valorTotal      Float
  dataPagamento   DateTime
  tipoTransacao   String      // PIX, TED, DOC, Cartão de Crédito, Boleto
  chavePix        String?     // Para PIX
  contaBancaria   String?     // Para TED/DOC
  codigoBarras    String?     // Para Boleto
  pdfUrl          String?     // URL do PDF anexado
  pdfNome         String?     // Nome original do arquivo PDF
  baixada         Boolean     @default(false) // Indica se a conta foi dada baixa
  dataBaixa       DateTime?   // Data em que a conta foi dada baixa
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("contas_a_pagar")
}

model ContasAReceber {
  id              String      @id @default(cuid())
  clienteId       String
  cliente         Cliente     @relation(fields: [clienteId], references: [id], onDelete: Restrict)
  cnpjCpf         String?
  valor           Float
  parcelas        Int         @default(1)
  valorTotal      Float
  dataRecebimento DateTime
  tipoTransacao   String      // PIX, TED, DOC, Cartão de Crédito, Boleto
  chavePix        String?     // Para PIX
  contaBancaria   String?     // Para TED/DOC
  codigoBarras    String?     // Para Boleto
  pdfUrl          String?     // URL do PDF anexado
  pdfNome         String?     // Nome original do arquivo PDF
  baixada         Boolean     @default(false) // Indica se a conta foi dada baixa
  dataBaixa       DateTime?   // Data em que a conta foi dada baixa
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("contas_a_receber")
}

