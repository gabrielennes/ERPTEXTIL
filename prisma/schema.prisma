// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Produto {
  id           String      @id @default(cuid())
  nome         String
  marca        String?
  peso         Float?
  precoCusto   Float?
  descricao    String?
  categoria    String?
  ncm          String?
  dimensoes    String? 
  precoVenda   Float
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  variacoes    Variacao[]

  @@map("produtos")
}

model Variacao {
  id            String   @id @default(cuid())
  sku           String
  codigoBarras  String?
  rfid          String?
  tamanho       String?
  cor           String?
  estoque       Int      @default(0)
  preco         Float?
  produtoId     String
  produto       Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  itemVendas    ItemVenda[]

  @@unique([produtoId, sku])
  @@map("variacoes")
}

model Venda {
  id          String      @id @default(cuid())
  numero      String      @unique
  total       Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  itens       ItemVenda[]

  @@map("vendas")
}

model ItemVenda {
  id          String   @id @default(cuid())
  vendaId     String
  venda       Venda    @relation(fields: [vendaId], references: [id], onDelete: Cascade)
  variacaoId  String
  variacao    Variacao @relation(fields: [variacaoId], references: [id])
  quantidade  Int
  precoUnitario Float
  subtotal    Float
  produtoNome String
  createdAt   DateTime @default(now())

  @@map("item_vendas")
}

