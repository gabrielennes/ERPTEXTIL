// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Produto {
  id           String      @id @default(cuid())
  nome         String
  marca        String?
  peso         Float?
  precoCusto   Float?
  descricao    String?
  categoria    String?
  ncm          String?
  dimensoes    String? 
  precoVenda   Float
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  variacoes    Variacao[]
  itensVenda   ItensVenda[]

  @@map("produtos")
}

model Variacao {
  id            String   @id @default(cuid())
  sku           String
  codigoBarras  String?
  rfid          String?
  tamanho       String?
  cor           String?
  estoque       Int      @default(0)
  preco         Float?
  produtoId     String
  produto       Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  itensVenda    ItensVenda[]

  @@unique([produtoId, sku])
  @@map("variacoes")
}

model Venda {
  id            String      @id @default(cuid())
  numero        String?
  total         Float
  subtotal      Float
  desconto      Float       @default(0)
  taxa          Float       @default(0)
  metodoPagamento String
  parcelas      Int         @default(1)
  statusPagamento String?   // pending, approved, rejected, cancelled
  paymentId     String?     // ID do pagamento no Mercado Pago
  preferenceId  String?     // ID da preferÃªncia no Mercado Pago (para buscar pagamentos relacionados)
  userId        String?
  dataVenda     DateTime    @default(now())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  itens         ItensVenda[]

  @@map("vendas")
}

model ItensVenda {
  id            String   @id @default(cuid())
  vendaId       String
  produtoId     String
  variacaoId    String?
  quantidade    Int
  precoUnitario Float
  subtotal      Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  venda         Venda    @relation(fields: [vendaId], references: [id], onDelete: Cascade)
  produto       Produto  @relation(fields: [produtoId], references: [id], onDelete: Restrict)
  variacao      Variacao? @relation(fields: [variacaoId], references: [id], onDelete: SetNull)

  @@map("itens_venda")
}

